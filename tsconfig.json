{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": false,
    "paths": {
      "@layers/*": ["./layers/*"],
      "constants": ["./layers/constants/nodejs/src"],
      "common": ["./layers/common/nodejs/src"],
      "entities": ["./layers/entities/nodejs/src"],
      "repositories": ["./layers/repositories/nodejs/src"],
      "powertools": ["./layers/powertools/nodejs/src"],
      "graphql-types": ["./layers/graphql-types/nodejs/src"]
    }
  },
  "include": [
    "services/**/*.ts",
    "layers/**/*.ts",
    "stacks/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    ".aws-sam",
    "dist",
    "build"
  ]
}